@page "/purchaseHistory"
@using BlazorBootstrap
@using client.DTO.Purchase
@using Microsoft.AspNetCore.Authorization
@inject IPurchaseService purchaseService
@inject IOfferService offerService


@attribute [Authorize]
<PageTitle>PurchaseHistory</PageTitle>

<h3>Items Table</h3>

<Grid
    TItem="PurchaseItem"
    Class="table table-hover table-striped align-middle"
    AllowSorting="true"
    DataProvider="PurchasesProvider"
    Responsive="true">

    <GridColumns>
        <GridColumn TItem="PurchaseItem" HeaderText="Id" PropertyName="Id" SortKeySelector="item => item.Id" TextAlignment="Alignment.Center">
            @context.Id
        </GridColumn>
        <GridColumn TItem="PurchaseItem" HeaderText="Title" PropertyName="Title" SortKeySelector="item => item.Title" TextAlignment="Alignment.Center">
            @context.Title
        </GridColumn>
        <GridColumn TItem="PurchaseItem" HeaderText="Amount" PropertyName="Amount" SortKeySelector="item => item.Amount" TextAlignment="Alignment.Center">
            @context.Amount
        </GridColumn>
        <GridColumn TItem="PurchaseItem" HeaderText="Date" PropertyName="Date" SortKeySelector="item => item.Date" TextAlignment="Alignment.Center">
            @context.Date
        </GridColumn>
        <GridColumn TItem="PurchaseItem" HeaderText="Price" PropertyName="Price" SortKeySelector="item => item.Price" TextAlignment="Alignment.Center">
            @context.Price
        </GridColumn>
    </GridColumns>

</Grid>

@code {
    private readonly IList<PurchaseItem> _purchaseItems = new List<PurchaseItem>();

    protected override async Task OnInitializedAsync() {
        var purchases = await purchaseService.GetPurchasesAsync();
        var offersIds = purchases.Select(purchase => purchase.OfferId);
        var offers = await offerService.GetOffersAsync(null);

        foreach (var purchase in purchases) {
            var offer = offers.FirstOrDefault(offer => offer.Id == purchase.OfferId);
            if (offer != null) {
                _purchaseItems.Add(new PurchaseItem {
                    Id = purchase.Id,
                    Title = offer.Title,
                    Amount = purchase.NumberOfItems,
                    Date = purchase.purchaseTime,
                    Price = purchase.PricePerItem
                });
            }
        }
    }

    private async Task<GridDataProviderResult<PurchaseItem>> PurchasesProvider(GridDataProviderRequest<PurchaseItem> request) {
        return await Task.FromResult(request.ApplyTo(_purchaseItems));
    }

    protected class PurchaseItem {
        public string Id { get; set; }
        public string Title { get; set; } = string.Empty;
        public int Amount { get; set; }
        public DateTime Date { get; set; }
        public int Price { get; set; }
    }
}